<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @photo.name %>
</p>

<p>
  <strong>Caption:</strong>
  <%= @photo.caption %>
</p>

<p>
  <strong>Categories:</strong>
  <ul>
  <% @photo.categories.each {|p| %>
  <li><%= p.name %></li>
  <% } %>
  </ul>
</p>

<p>
  <% if !!@photo.image.url %>
    <%= image_tag(@photo.image.url) %>
  <% end %>
</p>


<%= link_to 'Edit', edit_photo_path(@photo) %> |
<%= link_to 'Back', photos_path %>
