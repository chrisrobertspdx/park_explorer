<h3><%= @park.name %></h3>

<p><%= @park.description %> <%= link_to "Edit Park", edit_park_path(@park) %></p>

<div class="container">
  
<div class="rightcontainer" style="display:block;float:right;margin-right:175px">
<h3>Category Average</h3>
<% Category.all.each {|c| %>
  <%= c.name %>: <%=@park.get_cat_score(c)%><br>
<% } %>
</div>  
  
<h3>Photos</h3>
<table>
  <% @park.photos.each {|p| %>
  <tr>
    
    <td><%= link_to p.name, park_photo_path({park_id: @park.id,id: p.id}) %></td>
    <td><%= link_to "edit", edit_park_photo_path({park_id: @park,id: p.id}) %>
        <%= link_to 'delete', "/parks/#{@park.id}/photos/#{p.id}", method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <% } %>
</table>

<p><%= link_to "Add Photo", new_park_photo_path(@park) %></p>



</div>



